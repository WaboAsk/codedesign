// Librerias
#include <Servo.h>

//  ***********************************************
//  ************ DAVID LASERSCANNER 3D ************
//  ***********************************************
  //SERVOS
Servo servoDavidI;
Servo servoDavidD;

  //PINES
int pin_LaserDI = 1;
int pin_LaserDD = 2;

int pin_ServoDI = 8;
int pin_ServoDD = 9;


//  *****************************************
//  ************ MAKERSCANNER 3D ************
//  *****************************************
  //SERVOS
Servo servoMakerI;
Servo servoMakerD;

  //PINES
int pin_LaserMI = 3;
int pin_LaserMD = 4;

int pin_ServoMI = 10;
int pin_ServoMD = 11;


//  ***********************************
//  ************ Variables ************
//  ***********************************

int i = 0;
char dato;


void setup() {
  //Serial de consola
  Serial.begin(9600);

  //  ************ DAVID LASERSCANNER 3D ************
  pinMode(pin_LaserDI, OUTPUT);
  pinMode(pin_LaserDD, OUTPUT);
 
  servoDavidI.attach(pin_ServoDI);
  servoDavidD.attach(pin_ServoDD);


  //  ************ MAKERSCANNER 3D ************
  servoMakerI.attach(pin_ServoMI);
  servoMakerD.attach(pin_ServoMD);

  pinMode(pin_LaserMI, OUTPUT);
  pinMode(pin_LaserDD, OUTPUT);

}

void loop() {

  if (Serial.available()) {
    dato = Serial.read();
    Serial.println(dato);
  }

  if (dato == '1') {
    //ENCENDEMOS EL SERVO DEL DAVID IZQUIERDO
    Serial.println("Escaneando David lasser Scan lado Izquierdo");

    digitalWrite(pin_LaserDI, HIGH);
    digitalWrite(pin_LaserDD, LOW);
    digitalWrite(pin_LaserMI, LOW);
    digitalWrite(pin_LaserMD, LOW);

    for (i = 0; i <= 60; i += 1) {
      servoDavidI.write(i);
      delay(15);
    }

    for (i = 60; i >= 0; i -= 1) {
      servoDavidI.write(i);
      delay(15);
    }
  }

  if (dato == '2') {    
    //ENCENDEMOS EL SERVO DEL DAVID IZQUIERDO
    Serial.println("Escaneando David lasser Scan lado Derecho");
    
    digitalWrite(pin_LaserDI, LOW);
    digitalWrite(pin_LaserDD, HIGH);
    digitalWrite(pin_LaserMI, LOW);
    digitalWrite(pin_LaserMD, LOW);

    for (i = 0; i <= 60; i += 1) {
      servoDavidD.write(i);
      delay(15);
    }

    for (i = 60; i >= 0; i -= 1) {
      servoDavidD.write(i);
      delay(15);
    }
  }

  if (dato == '3') {
    //ENCENDEMOS EL SERVO DEL MAKER IZQUIERDO
    Serial.println("Escaneando MakerScan lado Izquierdo");
    
    digitalWrite(pin_LaserDI, LOW);
    digitalWrite(pin_LaserDD, LOW);
    digitalWrite(pin_LaserMI, HIGH);
    digitalWrite(pin_LaserMD, LOW);

    for (i = 0; i <= 60; i += 1) {
      servoMakerI.write(i);
      delay(15);
    }

    for (i = 60; i >= 0; i -= 1) {
      servoMakerI.write(i);
      delay(15);
    }
  }

  if (dato == '4') {
    //ENCENDEMOS EL SERVO DEL MAKER IZQUIERDO
    Serial.println("Escaneando MakerScan lado Derecho");
    
    digitalWrite(pin_LaserDI, LOW);
    digitalWrite(pin_LaserDD, LOW);
    digitalWrite(pin_LaserMI, LOW);
    digitalWrite(pin_LaserMD, HIGH);

    for (i = 0; i <= 60; i += 1) {
      servoMakerD.write(i);
      delay(15);
    }

    for (i = 60; i >= 0; i -= 1) {
      servoMakerD.write(i);
      delay(15);
    }
  }

}
